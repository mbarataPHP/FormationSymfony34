<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="{{ asset('public/css/bootstrap.min.css') }}" >

        <!-- Latest compiled and minified JavaScript -->
        <script src="{{ asset('public/js/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('public/js/bootstrap.min.js') }}" ></script>
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('homepage') }}">Home</a>

            </div>
            {% if is_granted('ROLE_USER') %}
                <form class="navbar-form navbar-left">
                    <a href="{{ path('newspaper_add') }}" class="btn btn-success">Ajouter</a>
                </form>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <form class="navbar-form navbar-right">
                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger">Se d√©connecter</a>
                </form>
            {% else %}

                <form class="navbar-form navbar-right">
                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-success">Se connecter</a>
                </form>
            {% endif %}
        </div>
    </nav>

    {% block body %}{% endblock %}

    {% block javascripts %}{% endblock %}
    </body>
</html>
